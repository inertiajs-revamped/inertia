{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 18.12.0 Workspace",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": true,
    "noUnusedLocals": true,
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "paths": {
      "@inertiajs-revamped/core": ["./packages/core/src/index.ts"],
      "@inertiajs-revamped/core/server": ["./packages/core/src/server.ts"],
      "@inertiajs-revamped/core/progress": ["./packages/core/src/progress.ts"],
      "@inertiajs-revamped/preact": ["./packages/preact/src/index.ts"],
      "@inertiajs-revamped/preact/server": ["./packages/preact/src/server.ts"],
      "@inertiajs-revamped/preact/progress": [
        "./packages/preact/src/progress.ts"
      ],
      "@inertiajs-revamped/react": ["./packages/react/src/index.ts"],
      "@inertiajs-revamped/react/server": ["./packages/react/src/server.ts"],
      "@inertiajs-revamped/react/progress": [
        "./packages/react/src/progress.ts"
      ],
      "@inertiajs-revamped/vue": ["./packages/vue/src/index.ts"],
      "@inertiajs-revamped/vue/server": ["./packages/vue/src/server.ts"],
      "@inertiajs-revamped/vue/progress": ["./packages/vue/src/progress.ts"],
      "@inertiajs-revamped/vite": ["./packages/vite/src/index.ts"]
    }
  }
}
