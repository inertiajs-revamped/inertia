{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports.biome": "explicit"
  },
  "files.insertFinalNewline": true,
  "files.exclude": {
    "docs/src/integrations/preact": true,
    "docs/src/integrations/react": true,
    "docs/src/integrations/vue": true
  },
  "search.followSymlinks": false,
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[php]": {
    "editor.defaultFormatter": "junstyle.php-cs-fixer"
  },
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.format.semicolons": "remove",
  "javascript.format.semicolons": "remove",
  "php-cs-fixer.executablePath": "${workspaceFolder}/packages/laravel/vendor/bin/php-cs-fixer",
  "php-cs-fixer.config": "${workspaceFolder}/packages/laravel/.php-cs-fixer.php",
  "php-cs-fixer.formatHtml": false,
  "markdownlint.config": {
    "no-inline-html": false,
    "first-line-h1": false,
    "single-h1": false,
    "no-duplicate-heading": false
  }
}
