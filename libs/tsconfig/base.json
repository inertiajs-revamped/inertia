{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 18.12.0 Base",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedParameters": true,
    "verbatimModuleSyntax": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "paths": {
      "@inertiajs-revamped/core": ["../../packages/core/src/index.ts"],
      "@inertiajs-revamped/core/*": ["../../packages/core/src/*.ts"],
      "@inertiajs-revamped/preact": ["../../packages/preact/src/index.ts"],
      "@inertiajs-revamped/preact/*": ["../../packages/preact/src/*.ts"],
      "@inertiajs-revamped/react": ["../../packages/react/src/index.ts"],
      "@inertiajs-revamped/react/*": ["../../packages/react/src/*.ts"],
      "@inertiajs-revamped/vue": ["../../packages/vue/src/index.ts"],
      "@inertiajs-revamped/vue/*": ["../../packages/vue/src/*.ts"],
      "@inertiajs-revamped/vite": ["../../packages/vite/src/index.ts"]
    }
  }
}
